{% extends 'AllocMariaFrontOfficeBundle:FrontOffice:layout.html.twig' %}


{% block body %}

    <style>
        .con{
            margin-right:35%;
            margin-left:35%;
        }

    </style>

    <h1 style="text-align: center">Connexion en tant qu'administrateur</h1>
    <div class="con">
        <div class="ui placeholder segment">
            <div class="ui one column very relaxed stackable grid">
                <div class="column">
                    <div class="ui form">
                        <div class="field">
                            <label>Identifiant</label>
                            <div class="ui left icon input">
                                <input type="text" placeholder="Identifiant">
                                <i class="user icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <label>Mot de passe</label>
                            <div class="ui left icon input">
                                <input type="password" placeholder="Mot de passe">
                                <i class="lock icon"></i>
                            </div>
                        </div>
                        <div class="ui blue submit button">Se connecter</div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}